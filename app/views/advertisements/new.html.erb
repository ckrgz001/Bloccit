<h1>New Sponsor</h1>

<div class="row">
<%= form_for @advertisement do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field  :title, class: 'form-control', placeholder: "Enter Ad Title"%>
    </div>

    <div class="form-group">
        <%= f.label :copy %>
        <%= f.text_area :copy, rows: 6, class: 'form-control', placeholder: "Enter Ad Text"%>
    </div>
   
    <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field  :price, class: 'form-control', placeholder: 100 %>
    </div>

    <div class="form-group">
        <%= f.submit "Submit", class: 'btn btn-success'%>
    </div>
    <% end %>

    </div>




